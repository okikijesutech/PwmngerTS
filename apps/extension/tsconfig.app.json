{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "noEmit": true,

    "types": ["chrome", "jest", "node"],

    "skipLibCheck": true,
    "paths": {
      "@pwmnger/crypto": ["../../packages/crypto/src"],
      "@pwmnger/vault": ["../../packages/vault/src"],
      "@pwmnger/storage": ["../../packages/storage/src"],
      "@pwmnger/ui": ["../../packages/ui/src"]
    }
  },
  "include": ["src"]
}
