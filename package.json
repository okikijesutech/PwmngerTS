{
  "name": "pwmngerts",
  "version": "1.5.1",
  "description": "Zero-knowledge, cross-platform password manager built with TypeScript",
  "author": {
    "name": "PwmngerTS Contributors",
    "url": "https://github.com/okikijesutech/PwmngerTS"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/okikijesutech/PwmngerTS.git"
  },
  "bugs": {
    "url": "https://github.com/okikijesutech/PwmngerTS/issues"
  },
  "homepage": "https://github.com/okikijesutech/PwmngerTS#readme",
  "keywords": [
    "password-manager",
    "zero-knowledge",
    "encryption",
    "security",
    "typescript",
    "monorepo",
    "argon2",
    "aes-gcm"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "backend"
  ],
  "scripts": {
    "test:crypto": "jest packages/crypto/src/crypto.test.ts",
    "test:vault": "jest packages/vault/src/vault.test.ts",
    "test:integration": "jest packages/vault/src/integration.test.ts",
    "test:applogic": "jest packages/appLogic/src",
    "test:storage": "jest packages/storage/src",
    "test:all": "jest",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "build": "pnpm -r --if-present run build",
    "lint": "pnpm -r --if-present run lint",
    "typecheck": "pnpm -r --if-present run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky"
  },
  "type": "commonjs",
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@playwright/test": "^1.58.2",
    "@types/chrome": "^0.1.36",
    "@types/jest": "^29.5.14",
    "@types/node": "^25.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "react": "19.2.4",
      "react-dom": "19.2.4",
      "react-is": "19.0.0",
      "@types/react": "19.2.0",
      "@types/react-dom": "19.2.0"
    }
  }
}
